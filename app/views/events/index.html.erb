<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= link_to 'Show', event, class: "btn btn-mini" %></td>
    <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-mini" %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path if current_user.has_role? :admin %>
